<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DA0C0C">

    <TextView
        android:id="@+id/txt_position_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/albertus"
        android:text="0"
        android:textColor="#03DAC5"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_clubname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/albertus"
            android:text="Eddy"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txt_matches"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/albertus"
            android:text="38"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/txt_win"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/albertus"
            android:text="3"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/txt_draw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/albertus"
            android:text="6"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/txt_lose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/albertus"
            android:text="2"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/txt_points"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/albertus"
            android:text="96"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</LinearLayout>