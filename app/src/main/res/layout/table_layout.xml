<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow>

        <TextView
            android:id="@+id/tv_position"
            android:text="1"
            android:width="20dp"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_club"
            android:layout_weight="1"
            android:gravity="center"
            android:width="70dp"
            android:maxLines="2"
            android:maxLength="15"
            android:text="Ливерпуль"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_games"
            android:text="38"
            android:textSize="12sp"
            android:width="20dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_wins"
            android:text="30"
            android:textSize="12sp"
            android:width="20dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_draws"
            android:text="6"
            android:textSize="12sp"
            android:width="20dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_loses"
            android:text="2"
            android:textSize="12sp"
            android:width="20dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_points"
            android:text="96"
            android:textSize="12sp"
            android:gravity="center"
            android:width="20dp"
            android:layout_weight="1"/>

    </TableRow>

</TableLayout>